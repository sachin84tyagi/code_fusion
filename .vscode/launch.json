{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Debug Full Stack (Port 4000)",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
            "args": [
                "dev",
                "-p",
                "4000"
            ],
            "env": {
                "NODE_OPTIONS": "--inspect"
            },
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome",
                "webRoot": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Next.js: Debug Full Stack (Port 3000)",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
            "args": [
                "dev",
                "-p",
                "3000"
            ],
            "env": {
                "NODE_OPTIONS": "--inspect"
            },
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome",
                "webRoot": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        }
    ]
}